header-height = 70px

body
  margin 0
  padding 0

.container
  border 1px gray solid

.app.header
  height header-height
  h1
    margin 0

.app.content
  width 100%
  height 100vh
  display flex
  flex-flow column

.double.content .left
  position fixed
  left 0
  top header-height
  width 50%
  height 100%
  display flex
  flex-flow column

.double.content .right
  width 50%
  align-self flex-end

.content .right
.content .left
    width 100%
