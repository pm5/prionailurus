{
  "name": "prionailurus",
  "version": "0.0.1",
  "description": "石虎相關資料",
  "private": true,
  "scripts": {
    "env": "env",
    "test": "echo \"Error: no test specified\" && exit 1",
    "update:data": "sh script/update-timeline",
    "build:data": "copyup src/**/*.json src/**/*.csv public/data",
    "build:vendor": "npm run vendor:css && npm run vendor:asset",
    "vendor:css": "cssmin node_modules/leaflet/dist/leaflet.css > public/vendor.css",
    "dev:css": "stylus -w -m -o public/ src/*.styl",
    "build:css": "stylus -c -o public/ src/*.styl",
    "vendor:asset": "copyup node_modules/leaflet/**/*.{png,jpg} public/assets",
    "dev:asset": "npm run build:asset",
    "build:asset": "true",
    "dev:html": "npm run build:html -- -w -O '{env:\"dev\"}' -P",
    "build:html": "jade -o public/ src/*.jade",
    "dev:js": "watch 'npm run build:js' src",
    "build:js": "parallelshell 'browserify -o public/app.js src/app.js' 'browserify -o public/timeline.js src/timeline.js'",
    "livereload": "live-reload --port 9090 public/",
    "update": "npm run update:data",
    "serve": "http-server public/",
    "dev": "rimraf public/* && parallelshell 'npm run build:data' 'npm run build:vendor' 'npm run dev:html' 'npm run dev:css' 'npm run dev:js' 'npm run dev:asset' 'npm run livereload' 'npm run serve'",
    "build": "rimraf public/* && parallelshell 'npm run build:data' 'npm run build:vendor' 'npm run build:html' 'npm run build:css' 'npm run build:js' 'npm run build:asset'",
    "deploy": "npm run build && git-directory-deploy --directory public/"
  },
  "author": "Pomin Wu <pomin5@gmail.com>",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "browserify": "^10.2.6",
    "copyfiles": "^0.2.1",
    "cssmin": "^0.4.3",
    "d3": "^3.5.6",
    "git-directory-deploy": "^1.1.0",
    "http-server": "^0.7.4",
    "jade": "^1.9.1",
    "leaflet": "^0.7.3",
    "live-reload": "^0.2.0",
    "moment": "^2.10.3",
    "parallelshell": "^1.0.3",
    "rimraf": "^2.4.1",
    "stylus": "^0.50.0",
    "watch": "^0.16.0"
  }
}
